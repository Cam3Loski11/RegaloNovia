---
import background from "../assets/background.svg";
import Particles from "./Particles.astro";
---

<div id="container">
	<img id="background" src={background.src} alt="" fetchpriority="high" />
	<!-- Contenedor con las flores solo en los lados -->
	<div class="layout-wrapper">
		<div class="side-border"></div>
		<div class="content">
			<Particles />
		</div>
		<div class="side-border"></div>
	</div>

	<style>
		#background {
			position: fixed;
			top: 0;
			left: 0;
			width: 100%;
			height: 100%;
			z-index: 1;
			filter: blur(100px);
		}

		.layout-wrapper {
			display: flex;
			background-color: #ffe8e8;
			z-index: 1;
			min-height: calc(100vh - 80px);
		}

		.side-border {
			width: 40px;
			height: calc(100vh - 80px); /* Ajusta seg√∫n la altura del header */
			background-image: url("/flower-border.png");
			background-repeat: repeat-y;
			background-size: contain;
			background-position: center;
			flex-shrink: 0;
			opacity: 0.6;
		}

		.content {
			flex: 1;
			min-height: 100%;
			position: relative;
			z-index: 1;
			padding: 2rem;
		}

		@media (max-width: 768px) {
			.side-border {
				display: none;
			}
		}
	</style>
</div>
